{
    "name": "philtenno/filesyncgo",
    "description": "Trigger global file synchronization in Contao via external HTTP endpoint",
    "type": "contao-bundle",
    "license": "MIT",
    "authors":[
        {
            "name":"Hardbitrocker",
            "homepage":"https://www.hardbitrocker.de"
        }
    ],
    "funding": [{
      "type": "github",
      "url": "https://github.com/PhilTenno"
    }], 
    "require": {
        "php": "^8.2",
        "contao/core-bundle": "^5.3"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },    
    "autoload": {
        "psr-4": {
            "PhilTenno\\FileSyncGo\\": "src"
        }
    },
    "extra": {
        "contao-manager-plugin": "PhilTenno\\FileSyncGo\\ContaoManager\\Plugin"

    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "php-http/discovery": true,
            "contao/manager-plugin": true
        }
    }
}
